<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox fx:id="container" styleClass="container" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="net.marvk.fs.vatsim.map.view.flightinformationregionboundarydetail.FlightInformationRegionBoundaryDetailView">
    <children>
        <VBox>
            <children>
                <HBox styleClass="header-pane">
                    <children>
                        <Label fx:id="icao" text="Label"/>
                    </children>
                </HBox>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                    <children>
                        <Label styleClass="description" text="Name(s)"/>
                        <Label fx:id="name" styleClass="mono" text="Label" GridPane.columnIndex="1"/>
                        <Label text="Position" GridPane.rowIndex="1"/>
                        <Label fx:id="position" onMouseClicked="#goTo" text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="1">
                            <styleClass>
                                <String fx:value="mono"/>
                                <String fx:value="hyperlink-label"/>
                            </styleClass>
                        </Label>
                    </children>
                </GridPane>
            </children>
        </VBox>
        <fx:include fx:id="controllers" source="../controllersdetail/ControllersDetailView.fxml"/>
        <VBox fx:id="uirsContainer">
            <children>
                <HBox styleClass="header-pane">
                    <children>
                        <Label text="UIRs"/>
                    </children>
                </HBox>
                <GridPane fx:id="uirsGrid" hgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                </GridPane>
            </children>
        </VBox>
    </children>
</VBox>
