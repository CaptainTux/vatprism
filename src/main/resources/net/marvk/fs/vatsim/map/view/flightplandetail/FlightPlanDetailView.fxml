<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox styleClass="container" fx:id="container" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="net.marvk.fs.vatsim.map.view.flightplandetail.FlightPlanDetailView">
    <children>
        <HBox styleClass="header-pane">
            <children>
                <Label text="Flight Plan"/>
            </children>
        </HBox>
        <HBox fx:id="noFlightPlan" alignment="CENTER" minHeight="0.0" minWidth="0.0">
            <children>
                <Label styleClass="mono" text="No Flight Plan"/>
            </children>
        </HBox>
        <VBox fx:id="content" minHeight="0.0" minWidth="0.0" spacing="5.0">
            <GridPane hgap="2.0" vgap="2.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="75.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="75.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="75.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="75.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label styleClass="description" text="Departure"/>
                <Label styleClass="description" text="Arrival" GridPane.columnIndex="3"/>
                <Label styleClass="description" text="Flight Rules" GridPane.rowIndex="2"/>
                <Label styleClass="description" text="Aircraft Type" GridPane.rowIndex="3"/>
                <Label styleClass="description" text="True Airspeed" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Label styleClass="description" text="Cruise Alt." GridPane.rowIndex="1"/>
                <Label fx:id="flightRules" styleClass="mono" text="Label" GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
                <Label fx:id="aircraftType" styleClass="mono" text="Label" GridPane.columnIndex="1"
                       GridPane.columnSpan="2147483647" GridPane.rowIndex="3"/>
                <Label fx:id="trueAirSpeed" styleClass="mono" text="Label" GridPane.columnIndex="4"
                       GridPane.rowIndex="1"/>
                <Label fx:id="cruiseAltitude" styleClass="mono" text="Label" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
                <Label fx:id="departure" onMouseClicked="#setToDeparture" text="Label" GridPane.columnIndex="1"
                       GridPane.columnSpan="2147483647">
                    <styleClass>
                        <String fx:value="mono"/>
                        <String fx:value="hyperlink-label"/>
                    </styleClass>
                </Label>
                <Label fx:id="arrival" onMouseClicked="#setToArrival" text="Label" GridPane.columnIndex="4"
                       GridPane.columnSpan="2147483647">
                    <styleClass>
                        <String fx:value="mono"/>
                        <String fx:value="hyperlink-label"/>
                    </styleClass>
                </Label>
            </GridPane>
            <VBox>
                <children>
                    <Label styleClass="description" text="Path"/>
                    <TextArea fx:id="path" editable="false" prefHeight="100.0" prefWidth="0.0" styleClass="mono"
                              wrapText="true">
                        <VBox.margin>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </VBox.margin>
                    </TextArea>
                </children>
            </VBox>
            <VBox>
                <children>
                    <Label styleClass="description" text="Remarks"/>
                    <TextArea fx:id="remarks" editable="false" prefHeight="100.0" prefWidth="0.0" styleClass="mono"
                              wrapText="true">
                        <VBox.margin>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </VBox.margin>
                    </TextArea>
                </children>
            </VBox>
        </VBox>
    </children>
</VBox>
