<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import net.marvk.fs.vatsim.map.view.datadetail.DataDetailPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<DataDetailPane headerText="METAR" fx:id="container" xmlns="http://javafx.com/javafx"
                xmlns:fx="http://javafx.com/fxml"
                fx:controller="net.marvk.fs.vatsim.map.view.datadetail.metardetail.MetarDetailView">
    <contentNode>
        <HBox>
            <TextArea prefHeight="55" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="200" fx:id="metarText"
                      editable="false"
                      wrapText="true"/>
            <VBox HBox.hgrow="NEVER">
                <Button VBox.vgrow="ALWAYS" styleClass="icon-button" maxHeight="Infinity" fx:id="refreshMetar">
                    <graphic>
                        <FontIcon iconLiteral="oct-download-16"/>
                    </graphic>
                </Button>
            </VBox>
        </HBox>
    </contentNode>
</DataDetailPane>
